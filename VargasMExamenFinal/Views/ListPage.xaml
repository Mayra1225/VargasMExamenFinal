<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VargasMExamenFinal.Views.ListPage"
             Title="Lsta de Productos">
    <CollectionView ItemsSource="{Binding Nombre}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="5" BorderColor="Gray">
                    <StackLayout>
                        <Label Text="{Binding Nombre}" FontAttributes="Bold"/>
                        <Label Text="{Binding Categoria}"/>
                        <Label Text="Cantidad: {Binding Cantidad}"/>
                        <Label Text="Precio: {Binding PrecioEstimado}"/>
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>