<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="VargasMExamenFinal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VargasMExamenFinal.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="VargasMExamenFinal"
    Shell.TabBarBackgroundColor="{StaticResource PrimaryButton}"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarUnselectedColor="#d7edff"
    Shell.TabBarTitleColor="White"
    Shell.TabBarDisabledColor="Gray">

    <TabBar>
        <ShellContent Title="Formulario" ContentTemplate="{DataTemplate local:FormPage}" />
        <ShellContent Title="Lista" ContentTemplate="{DataTemplate local:ListPage}" />
        <ShellContent Title="Logs" ContentTemplate="{DataTemplate local:LogPage}" />
    </TabBar>

</Shell>
